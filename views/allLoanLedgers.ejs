<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Loan Ledger</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>

<body>
    <!-- Navigation bar -->

	<nav>
		<a class="active" href="https://localhost:3000/api/logout"><i class="fa-solid fa-right-from-bracket"></i>Logout</a>
        <a class="active" href="https://localhost:3000/api/customers"><i class="fa-solid fa-users-viewfinder"></i>View Customers</a>
        <a class="active" href="https://localhost:3000/api/customers/addCustomerForm"><i class="fa-solid fa-user-plus"></i>Add New Customer</a>
		<a class="active" href="https://localhost:3000/api/loans"><i class="fa-solid fa-file-invoice-dollar"></i>View Loans</a>
		<a class="active" href="https://localhost:3000/api/loans/addLoanForm"><i class="fa-solid fa-hand-holding-dollar"></i>Add New Loan</a>
		<a class="active" href="https://localhost:3000/api/home"><i class="fa-solid fa-house"></i>Home</a>
	</nav>

    <h1>Loan Ledger</h1>
    <table>
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Loan Number</th>
                <th>Payment Amount</th>
                <th>Interest</th>
                <th>Principal</th>
            </tr>
        </thead>
        <tbody>
            <% loanledger.forEach(function(loan) { %>
                <tr>
                    <td><%= loan.customerID %></td>
                    <td><%= loan.loanNumber %></td>
                    <td><%= loan.paymentAmount.toLocaleString('en-US', {
                        style: 'currency',
                        currency: 'USD',
                        minimumFractionDigits: 2
                      }) %></td>
                    <td><%= loan.interest.toLocaleString('en-US', {
                        style: 'currency',
                        currency: 'USD',
                        minimumFractionDigits: 2
                      }) %></td>
                    <td><%= loan.principal.toLocaleString('en-US', {
                        style: 'currency',
                        currency: 'USD',
                        minimumFractionDigits: 2
                      }) %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>

</html>